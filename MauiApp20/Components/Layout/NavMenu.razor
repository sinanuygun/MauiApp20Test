@inject NavigationManager NavigationManager

<!-- Header -->
<header class="app-header">
    <div class="nav-bar" @onclick="ToggleSidebar">
        <i class="iconly-Category icli"></i>
    </div>
    <a href="/" class="brand-logo">
        <span>Business Portal</span>
    </a>
    <div class="header-option">
        <a href="/notification" class="notification-btn">
            <i class="iconly-Notification icli"></i>
            <span class="notification-badge">3</span>
        </a>
    </div>
</header>

<a href="javascript:void(0)" class="overlay-sidebar @(isSidebarOpen ? "show" : "")" @onclick="ToggleSidebar"></a>

<div class="header-sidebar @(isSidebarOpen ? "show" : "")">
    <a href="/profile" class="user-panel">
        <div class="profile-avatar">AY</div>
        <div class="profile-info">
            <span class="user-name">Ahmet Yılmaz</span>
            <span class="user-role">Finans Müdürü</span>
        </div>
        <i class="iconly-Arrow-Right-2 icli"></i>
    </a>
    
    <div class="sidebar-content">
        <ul class="link-section">
            <li>
                <a href="/" @onclick="CloseSidebar">
                    <i class="iconly-Home icli"></i>
                    <div class="content">
                        <h4>Ana Sayfa</h4>
                        <h6>Dashboard, Özet Bilgiler</h6>
                    </div>
                </a>
            </li>
            
            <li>
                <a href="/tasks" @onclick="CloseSidebar">
                    <i class="iconly-Document icli"></i>
                    <div class="content">
                        <h4>Görevlerim</h4>
                        <h6>Bekleyen, Tamamlanan Görevler</h6>
                    </div>
                </a>
            </li>
            
            <li>
                <a href="/notification" @onclick="CloseSidebar">
                    <i class="iconly-Notification icli"></i>
                    <div class="content">
                        <h4>Bildirimler</h4>
                        <h6>Görev Bildirimleri</h6>
                    </div>
                </a>
            </li>
            
            <li>
                <a href="/profile" @onclick="CloseSidebar">
                    <i class="iconly-Profile icli"></i>
                    <div class="content">
                        <h4>Profilim</h4>
                        <h6>Hesap Bilgileri, Ayarlar</h6>
                    </div>
                </a>
            </li>
        </ul>

        <div class="divider"></div>

        <ul class="link-section">
            <li>
                <div class="theme-toggle">
                    <i class="iconly-Setting icli"></i>
                    <div class="content toggle-sec w-100">
                        <div>
                            <h4 class="mb-0">Karanlık Mod</h4>
                        </div>
                        <div class="button toggle-btn ms-auto">
                            <input id="darkButton" type="checkbox" class="checkbox" @onchange="ToggleDarkMode">
                            <div class="knobs">
                                <span></span>
                            </div>
                            <div class="layer"></div>
                        </div>
                    </div>
                </div>
            </li>
            
            <li>
                <a href="/help" @onclick="CloseSidebar">
                    <i class="iconly-Call icli"></i>
                    <div class="content">
                        <h4>Yardım</h4>
                        <h6>Destek, SSS</h6>
                    </div>
                </a>
            </li>
        </ul>
        
        <div class="version-info">
            Business Portal v1.0.0
        </div>
    </div>
</div>

@code {
    private bool isSidebarOpen = false;

    private void ToggleSidebar()
    {
        isSidebarOpen = !isSidebarOpen;
    }

    private void CloseSidebar()
    {
        isSidebarOpen = false;
    }

    private void ToggleDarkMode(ChangeEventArgs e)
    {
        // Dark mode logic - JSInterop ile tema değiştirme yapılabilir
    }
}